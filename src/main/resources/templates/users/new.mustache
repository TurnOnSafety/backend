{{>layouts/header}}

<form class="container" action="/user/create" method="post">
    <div class="mb-3">
        <label class="form-label">이름</label>
        <input type="text" class="form-control" name="name">
    </div>
    <div class="mb-3">
        <label class="form-label">업체명</label>
        <textarea class="form-control" rows="3" name="company"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">역할</label>
        <textarea class="form-control" rows="4" name="role"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">팀</label>
        <textarea class="form-control" rows="5" name="team"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">공종</label>
        <textarea class="form-control" rows="6" name="position"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">휴대폰 번호</label>
        <textarea class="form-control" rows="7" name="phone"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

{{>layouts/footer}}